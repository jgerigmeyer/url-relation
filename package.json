  },
  "repository": "stevenvachon/url-relation",
  "dependencies": {
    "any-match": "^2.0.0",
    "deep-freeze-node": "^1.1.3",
    "defined": "^1.0.0",
    "evaluate-value": "^1.0.2",
    "isurl": "^2.0.0",
    "parse-domain": "^2.1.7",
    "strip-www": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "gzip-size-cli": "^3.0.0",
    "incomplete-url": "^2.0.0",
    "mocha": "^5.2.0",
    "npm-watch": "~0.5.0",
    "nyc": "^13.1.0",
    "terser": "^3.10.12",
    "universal-url": "^2.0.0"
  },
  "engines": {
    "node": ">= 6"
  },
  "scripts": {
    "ci": "npm run test && nyc report --reporter=text-lcov | coveralls",
    "posttest": "nyc report --reporter=html && browserify index.js --global-transform [ babelify --presets [ @babel/env ] ] --standalone urlRelation | terser --compress --mangle | gzip-size",
    "test": "nyc --reporter=text-summary mocha test/ --check-leaks --bail",
    "watch": "npm-watch test"
  },
  "watch": {
    "test": {
      "inherit": true,
      "patterns": [
        "index.js",
        "test/**/*.{js,json}"
      ]
    }
